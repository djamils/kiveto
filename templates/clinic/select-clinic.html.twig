{% extends 'base.html.twig' %}

{% block title %}Sélectionner une clinique{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Sélectionnez votre clinique</h3>
                </div>
                <div class="card-body">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <form method="post" action="{{ path('clinic_select_clinic_post') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token }}">

                        <div class="list-group mb-3">
                            {% for clinic in clinics %}
                                <label class="list-group-item list-group-item-action d-flex align-items-center">
                                    <input type="radio" name="clinic_id" value="{{ clinic.clinicId }}" class="form-check-input me-3" required>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1">{{ clinic.clinicName }}</h5>
                                        <p class="mb-1 text-muted">
                                            <small>
                                                <code>{{ clinic.clinicSlug }}</code> · 
                                                <span class="badge bg-info">{{ clinic.memberRole.value }}</span>
                                                <span class="badge bg-secondary">{{ clinic.engagement.value }}</span>
                                            </small>
                                        </p>
                                    </div>
                                </label>
                            {% endfor %}
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">Continuer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
