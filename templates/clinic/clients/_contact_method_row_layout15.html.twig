<div class="contact-method-row p-3 rounded bg-muted/20 border border-border">
    <div class="grid grid-cols-12 gap-3">
        <div class="col-span-12 md:col-span-2">
            <label class="form-label text-xs">Type</label>
            <select class="form-select form-select-sm" name="contact_type[]" required>
                <option value="phone" {{ contact and contact.type == 'phone' ? 'selected' : '' }}>Téléphone</option>
                <option value="email" {{ contact and contact.type == 'email' ? 'selected' : '' }}>Email</option>
            </select>
        </div>
        <div class="col-span-12 md:col-span-2">
            <label class="form-label text-xs">Label</label>
            <select class="form-select form-select-sm" name="contact_label[]" required>
                <option value="mobile" {{ contact and contact.label == 'mobile' ? 'selected' : '' }}>Mobile</option>
                <option value="home" {{ contact and contact.label == 'home' ? 'selected' : '' }}>Domicile</option>
                <option value="work" {{ contact and contact.label == 'work' ? 'selected' : '' }}>Travail</option>
                <option value="other" {{ contact and contact.label == 'other' ? 'selected' : '' }}>Autre</option>
            </select>
        </div>
        <div class="col-span-12 md:col-span-5">
            <label class="form-label text-xs">Valeur</label>
            <input type="text" 
                   class="form-control form-control-sm" 
                   name="contact_value[]" 
                   placeholder="Téléphone ou email" 
                   required 
                   value="{{ contact.value ?? '' }}">
        </div>
        <div class="col-span-6 md:col-span-2">
            <label class="form-label text-xs">Principal</label>
            <div class="form-check form-check-custom form-check-solid mt-2">
                <input class="form-check-input" 
                       type="checkbox" 
                       name="contact_primary[{{ index }}]" 
                       value="1" 
                       {{ contact and contact.isPrimary ? 'checked' : '' }}>
                <label class="form-check-label text-xs">Oui</label>
            </div>
        </div>
        <div class="col-span-6 md:col-span-1 flex items-end">
            <button type="button" class="kt-btn kt-btn-icon kt-btn-light kt-btn-sm remove-contact w-full">
                <i class="ki-filled ki-trash"></i>
            </button>
        </div>
    </div>
</div>
