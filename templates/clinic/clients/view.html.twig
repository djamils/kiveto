{% extends 'clinic/base.html.twig' %}

{% block title %}{{ client.firstName }} {{ client.lastName }}{% endblock %}

{% block content %}
<div class="container-fluid py-4 px-3 px-md-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3 mb-0">
                {{ client.firstName }} {{ client.lastName }}
                {% if client.status == 'active' %}
                    <span class="badge bg-success">Actif</span>
                {% else %}
                    <span class="badge bg-secondary">Archivé</span>
                {% endif %}
            </h1>
            <p class="text-muted">Détails du client</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('clinic_clients_list') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Retour à la liste
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            {# Identity #}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Identité</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="w-25">Prénom</th>
                                <td>{{ client.firstName }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ client.lastName }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            {# Contact Methods #}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Moyens de contact</h5>
                </div>
                <div class="card-body">
                    {% if client.contactMethods|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for contact in client.contactMethods %}
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            {% if contact.type == 'phone' %}
                                                <i class="bi bi-telephone text-primary me-2"></i>
                                            {% else %}
                                                <i class="bi bi-envelope text-primary me-2"></i>
                                            {% endif %}
                                            <strong class="text-capitalize">{{ contact.label }}</strong>
                                            {% if contact.isPrimary %}
                                                <span class="badge bg-primary ms-2">Principal</span>
                                            {% endif %}
                                        </div>
                                        <div class="text-end">
                                            {% if contact.type == 'phone' %}
                                                <a href="tel:{{ contact.value }}" class="text-decoration-none">
                                                    {{ contact.value }}
                                                </a>
                                            {% else %}
                                                <a href="mailto:{{ contact.value }}" class="text-decoration-none">
                                                    {{ contact.value }}
                                                </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted mb-0">Aucun moyen de contact enregistré.</p>
                    {% endif %}
                </div>
            </div>

            {# Postal Address #}
            {% if client.postalAddress %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Adresse postale</h5>
                    </div>
                    <div class="card-body">
                        <address class="mb-0">
                            {{ client.postalAddress.streetLine1 }}<br>
                            {% if client.postalAddress.streetLine2 %}
                                {{ client.postalAddress.streetLine2 }}<br>
                            {% endif %}
                            {% if client.postalAddress.postalCode %}
                                {{ client.postalAddress.postalCode }}
                            {% endif %}
                            {{ client.postalAddress.city }}<br>
                            {% if client.postalAddress.region %}
                                {{ client.postalAddress.region }}<br>
                            {% endif %}
                            <strong>{{ client.postalAddress.countryCode }}</strong>
                        </address>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            {# Actions #}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    {% if client.status == 'active' %}
                        <div class="d-grid gap-2">
                            <a href="{{ path('clinic_clients_edit', {id: client.id}) }}" class="btn btn-outline-primary">
                                <i class="bi bi-pencil me-2"></i>Modifier
                            </a>
                            <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#archiveModal">
                                <i class="bi bi-box-arrow-in-down me-2"></i>Archiver
                            </button>
                        </div>
                    {% else %}
                        <div class="alert alert-warning small mb-2">
                            <i class="bi bi-info-circle me-1"></i>
                            Ce client est archivé et ne peut plus être modifié.
                        </div>
                        <p class="text-muted small mb-0">
                            Le désarchivage sera disponible prochainement.
                        </p>
                    {% endif %}
                </div>
            </div>

            {# Info #}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Informations</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="text-muted">ID</th>
                                <td class="text-end">
                                    <small class="font-monospace">{{ client.id|slice(0, 8) }}...</small>
                                </td>
                            </tr>
                            <tr>
                                <th class="text-muted">Créé le</th>
                                <td class="text-end">{{ client.createdAt|date('d/m/Y à H:i') }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Modifié le</th>
                                <td class="text-end">{{ client.updatedAt|date('d/m/Y à H:i') }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{# Archive Modal #}
<div class="modal fade" id="archiveModal" tabindex="-1" aria-labelledby="archiveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="archiveModalLabel">Archiver le client</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir archiver ce client ?</p>
                <p class="text-muted small mb-0">
                    <i class="bi bi-info-circle me-1"></i>
                    Un client archivé ne pourra plus être modifié.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('clinic_clients_archive', {id: client.id}) }}" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('clinic_client_form') }}">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-box-arrow-in-down me-2"></i>Archiver
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
