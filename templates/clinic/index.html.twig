{% extends 'clinic/base.html.twig' %}

{% block title %}Accueil - Clinique Vétérinaire{% endblock %}

{% block content %}
<div class="container-fluid py-4 px-3 px-md-4">
    {# Header #}
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="h2 h1-md mb-3">{{ 'clinic.home.title'|trans({}, 'messages') }}</h1>
            <p class="lead text-muted mb-2">{{ 'clinic.home.subtitle'|trans({}, 'messages') }}</p>
            {% if clinicName %}
                <p class="text-muted">
                    <i class="ki-filled ki-bank me-1"></i>
                    <strong>{{ clinicName }}</strong>
                </p>
            {% endif %}
        </div>
    </div>

    {# Menu Cards #}
    <div class="row g-3 g-md-4 mb-4">
        {% for item in menuItems %}
            <div class="col-6 col-lg-3">
                <div class="card h-100 {% if item.route is null %}opacity-75{% else %}shadow-hover{% endif %}">
                    <div class="card-body text-center p-3 p-md-4">
                        <div class="mb-2 mb-md-3">
                            <i class="ki-filled {{ item.icon }} fs-1 fs-md-2x text-primary"></i>
                        </div>
                        <h5 class="card-title mb-2 mb-md-3 fs-6 fs-md-5">{{ item.label }}</h5>
                        {% if item.badge is defined %}
                            <span class="badge bg-warning text-dark mb-2 mb-md-3 small">{{ item.badge }}</span>
                        {% endif %}
                        <div class="d-grid">
                            {% if item.route %}
                                <a href="{{ path(item.route) }}" class="btn btn-primary btn-sm">
                                    Accéder
                                </a>
                            {% else %}
                                <button class="btn btn-secondary btn-sm" disabled>
                                    <span class="d-none d-md-inline">Bientôt disponible</span>
                                    <span class="d-md-none">Bientôt</span>
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {# Welcome Message #}
    <div class="row">
        <div class="col-12 col-lg-10 col-xl-8 mx-auto">
            <div class="card">
                <div class="card-body p-3 p-md-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="ki-filled ki-information-3 text-primary fs-2 me-2 me-md-3"></i>
                        <h5 class="card-title mb-0 fs-6 fs-md-5">{{ 'hello'|trans({}, 'messages') }} !</h5>
                    </div>
                    <p class="card-text mb-3 small small-md-base">
                        Bienvenue dans votre espace clinique vétérinaire. Gérez facilement vos clients, 
                        leurs animaux, les rendez-vous et bien plus encore.
                    </p>
                    <a href="{{ path('clinic_dashboard') }}" class="btn btn-outline-primary btn-sm">
                        {{ 'clinic.home.cta'|trans({}, 'messages') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.shadow-hover {
    transition: transform 0.2s, box-shadow 0.2s;
}
@media (min-width: 768px) {
    .shadow-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
}
.h1-md {
    font-size: 1.75rem;
}
@media (min-width: 768px) {
    .h1-md {
        font-size: 2.5rem;
    }
}
.fs-md-2x {
    font-size: 2rem;
}
@media (min-width: 768px) {
    .fs-md-2x {
        font-size: 3rem;
    }
}
.fs-md-5 {
    font-size: 1rem;
}
@media (min-width: 768px) {
    .fs-md-5 {
        font-size: 1.25rem;
    }
}
.small-md-base {
    font-size: 0.875rem;
}
@media (min-width: 768px) {
    .small-md-base {
        font-size: 1rem;
    }
}
</style>
{% endblock %}
