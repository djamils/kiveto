{% extends 'base.html.twig' %}

{% block title %}Backoffice · Translations{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Translations</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card mb-4">
        <div class="card-header">Filtrer</div>
        <div class="card-body">
            <form method="get" action="{{ path('backoffice_translations') }}" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Scope</label>
                    <select name="scope" class="form-select">
                        <option value="">(tous)</option>
                        {% for option in ['clinic','portal','backoffice','shared'] %}
                            <option value="{{ option }}" {{ filters.scope == option ? 'selected' : '' }}>{{ option }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Locale</label>
                    <input name="locale" class="form-control" value="{{ filters.locale }}">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Domain</label>
                    <input name="domain" class="form-control" value="{{ filters.domain }}">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Key contains</label>
                    <input name="key" class="form-control" value="{{ filters.key }}">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Value contains</label>
                    <input name="value" class="form-control" value="{{ filters.value }}">
                </div>
                <div class="col-md-12">
                    <button class="btn btn-primary" type="submit">Rechercher</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">Créer / Mettre à jour</div>
        <div class="card-body">
            <form method="post" action="{{ path('backoffice_translations_upsert') }}" class="row g-3">
                <input type="hidden" name="_token" value="{{ csrf_token }}">
                <div class="col-md-3">
                    <label class="form-label">Scope*</label>
                    <select name="scope" class="form-select" required>
                        {% for option in ['clinic','portal','backoffice','shared'] %}
                            <option value="{{ option }}" {{ filters.scope == option ? 'selected' : '' }}>{{ option }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Locale*</label>
                    <input name="locale" class="form-control" value="{{ filters.locale ?: 'fr_FR' }}" required>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Domain*</label>
                    <input name="domain" class="form-control" value="{{ filters.domain ?: 'messages' }}" required>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Key*</label>
                    <input name="key" class="form-control" required>
                </div>
                <div class="col-md-12">
                    <label class="form-label">Value* (ICU autorisé)</label>
                    <textarea name="value" class="form-control" rows="2" required></textarea>
                </div>
                <div class="col-md-12">
                    <label class="form-label">Description (optionnel)</label>
                    <textarea name="description" class="form-control" rows="2"></textarea>
                </div>
                <div class="col-md-12">
                    <button class="btn btn-success" type="submit">Upsert</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Résultats ({{ result.total }})
        </div>
        <div class="card-body table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Scope</th>
                        <th>Locale</th>
                        <th>Domain</th>
                        <th>Key</th>
                        <th>Value</th>
                        <th>Description</th>
                        <th>Created at</th>
                        <th>Created by</th>
                        <th>Updated at</th>
                        <th>Updated by</th>
                        <th style="width: 100px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in result.items %}
                    <tr>
                        <td>{{ item.scope }}</td>
                        <td>{{ item.locale }}</td>
                        <td>{{ item.domain }}</td>
                        <td><code>{{ item.key }}</code></td>
                        <td style="max-width: 320px; white-space: pre-wrap;">{{ item.value }}</td>
                        <td style="max-width: 220px; white-space: pre-wrap;">{{ item.description ?: '—' }}</td>
                        <td>{{ item.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td>{{ item.createdBy ?: '—' }}</td>
                        <td>{{ item.updatedAt|date('Y-m-d H:i:s') }}</td>
                        <td>{{ item.updatedBy ?: '—' }}</td>
                        <td>
                            <form method="post" action="{{ path('backoffice_translations_delete') }}" onsubmit="return confirm('Supprimer cette traduction ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token }}">
                                <input type="hidden" name="scope" value="{{ item.scope }}">
                                <input type="hidden" name="locale" value="{{ item.locale }}">
                                <input type="hidden" name="domain" value="{{ item.domain }}">
                                <input type="hidden" name="key" value="{{ item.key }}">
                                <button class="btn btn-sm btn-outline-danger" type="submit">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="8" class="text-center">Aucun résultat</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-between">
            {% set page = filters.page|default(1) %}
            {% set prev = page > 1 ? page - 1 : 1 %}
            {% set next = page + 1 %}
            <div>
                <a class="btn btn-outline-secondary {{ page == 1 ? 'disabled' : '' }}" href="{{ path('backoffice_translations', filters|merge({'page': prev})) }}">Précédent</a>
                <a class="btn btn-outline-secondary" href="{{ path('backoffice_translations', filters|merge({'page': next})) }}">Suivant</a>
            </div>
            <div>Page {{ page }}</div>
        </div>
    </div>
</div>
{% endblock %}

