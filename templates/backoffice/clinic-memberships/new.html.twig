{% extends 'base.html.twig' %}

{% block title %}Backoffice · Nouvelle Clinic Membership{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Créer une Clinic Membership</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card">
        <div class="card-body">
            <form method="post" action="{{ path('backoffice_clinic_memberships_create') }}">
                <input type="hidden" name="_token" value="{{ csrf_token }}">

                <div class="mb-3">
                    <label class="form-label">Clinic *</label>
                    <select name="clinic_id" class="form-select" required>
                        <option value="">-- Sélectionner une clinique --</option>
                        {% for clinic in clinics.clinics %}
                            <option value="{{ clinic.id }}">{{ clinic.name }} ({{ clinic.slug }})</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">User ID (UUID) *</label>
                    <input type="text" name="user_id" class="form-control" required placeholder="ex: 01234567-89ab-cdef-0123-456789abcdef">
                    <small class="form-text text-muted">Saisissez l'UUID de l'utilisateur depuis IdentityAccess</small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Rôle *</label>
                    <select name="role" class="form-select" required>
                        <option value="">-- Sélectionner un rôle --</option>
                        <option value="CLINIC_ADMIN">Clinic Admin</option>
                        <option value="VETERINARY">Veterinary</option>
                        <option value="ASSISTANT_VETERINARY">Assistant Veterinary</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Engagement *</label>
                    <select name="engagement" class="form-select" required>
                        <option value="">-- Sélectionner un engagement --</option>
                        <option value="EMPLOYEE">Employee</option>
                        <option value="CONTRACTOR">Contractor (freelance)</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Valid From (UTC)</label>
                    <input type="datetime-local" name="valid_from" class="form-control">
                    <small class="form-text text-muted">Laisser vide pour utiliser la date actuelle</small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Valid Until (UTC)</label>
                    <input type="datetime-local" name="valid_until" class="form-control">
                    <small class="form-text text-muted">Optionnel. Laisser vide pour pas de limite (recommandé pour EMPLOYEE)</small>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">Créer</button>
                    <a href="{{ path('backoffice_clinic_memberships') }}" class="btn btn-outline-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
